    <script>
        $(document).ready(function () {
            LoadGeneralInfo();
        });

        function LoadGeneralInfo() {
            $.getJSON("/Home/Select_List_GeneralInfo")
            .done(function (data) {
                var strLogo = "";
                var strHotline = "";
                var strFooter = "";
                $.each(data, function (key, item) {
                    strLogo += "<a href='/'><img src='../../" + item.Logo + "' width='80' height='50'/></a>";
                    $('#divLogo').html(strLogo);
                    strHotline += "<i class='fa fa-phone'></i>&nbsp;<b>" + item.Hotline + "</b>";
                    $('#divHotline').html(strHotline);
                    strFooter += "<p class='tm-copyright-text-left'>";
                    strFooter += "<b><span style='line-height:1.5; color:#FCDD44; text-transform:uppercase'>" + item.CompanyName + "</span></b><br /><br />";
                    strFooter += "<span style='line-height:2'>";
                    strFooter += "<i style='width:25px' class='fa fa-map-marker'></i>Địa chỉ: " + item.CompanyAddress + "<br />";
                    strFooter += "<i style='width:25px' class='fa fa-phone'></i>Điên thoại: " + item.CompanyPhone + " - Fax: " + item.CompanyFax + "<br />";
                    strFooter += "<i style='width:25px' class='fa fa-envelope'></i>Email: " + item.CompanyMail + "<br />";
                    strFooter += "<i style='width:25px' class='fa fa-clock-o'></i>Giờ mở cửa: Mon - Fri: 8:00 - 17:30 / Sat: 8:00 - 16:00<br />";
                    strFooter += "<i style='width:25px' class='fa fa-globe'></i>Website: <a href='http://phongvemaybayhathanh.com'>phongvemaybayhathanh.com</a>";
                    strFooter += "</span></p>";
                    $('#divFooter').html(strFooter);
                });
            });
        };
    </script>
