<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title | CÔNG TY TNHH MTV TƯ VẤN ĐẦU TƯ XÂY DỰNG THƯƠNG MẠI HÀ THÀNH</title>
    <link href="~/Layout/Admin/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Layout/Admin/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Layout/Admin/vendors/nprogress/nprogress.css" rel="stylesheet">
    <link href="~/Layout/Admin/vendors/bootstrap-progressbar/css/bootstrap-progressbar-3.3.4.min.css" rel="stylesheet">
    <link href="~/Layout/Admin/vendors/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet">
    <link href="~/Layout/Admin/build/css/custom.css" rel="stylesheet">
    <link href="~/Layout/Admin/css/jquery.toast.css" rel="stylesheet" />
    <link href="~/Layout/Admin/css/editor.css" rel="stylesheet" />
    @RenderSection("css", required: false)
    <style type="text/css">
        #loading {
            position: fixed;
            left: 0px;
            top: 0px;
            width: 100%;
            height: 100%;
            opacity: 0.7;
            z-index: 99999999999999;
            background: url(/Layout/Admin/images/Preloader_1.gif) center no-repeat #fff;
        }
    </style>
</head>
<body class="nav-md">
    <div id="loading"></div>
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col menu_fixed">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="/Admin/Index" class="site_title"><span>Phòng Vé Hà Thành</span></a>
                    </div>
                    <div class="clearfix"></div>
                    <!-- menu profile quick info -->
                    <div class="profile clearfix">
                        <div class="profile_pic">
                            <img id="imgUserImage" alt="..." class="img-circle profile_img">
                        </div>
                        <div class="profile_info">
                            <span><i class="fa fa-angellist"></i> Xin chào,</span>
                            <h2 id="hdUserName"></h2>
                        </div>
                    </div>
                    <!-- /menu profile quick info -->
                    <br />
                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            <h3>NỘI DUNG</h3>
                            <ul class="nav side-menu">
                                <li>
                                    <a href="/"><i class="fa fa-home"></i> Trang Chủ </a>
                                </li>
                                <li>
                                    <a><i class="fa fa-list-alt"></i> Nội Dung Website <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="/Admin/Banner">Banner</a></li>
                                        <li><a href="/Admin/About">Giới Thiệu</a></li>
                                        <li><a href="/Admin/HotelService">Dịch Vụ Khách Sạn</a></li>
                                        <li><a href="/Admin/BookingAndPayment">Đặt Vé - Thanh Toán</a></li>
                                        <li><a href="/Admin/TravelInsurance">Bảo Hiểm Du Lịch</a></li>
                                        <li><a href="/Admin/AgencyPolicy">Chính Sách Đại Lý</a></li>
                                        <li><a href="/Admin/Contact">Liên Hệ</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a><i class="fa fa-fighter-jet"></i> Danh Mục Chung<span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="/Admin/PlaceCategory">Danh Mục Địa Điểm</a></li>
                                        <li><a href="/Admin/BrandCategory">Danh Mục Đối Tác</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a><i class="fa fa-plane"></i> Dịch Vụ <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="/Admin/TicketAndTour">Cập Nhật&nbsp;&nbsp;Vé - Tour</a></li>
                                        <li><a href="/Admin/Visa">Cập Nhật&nbsp;&nbsp;Visa</a></li>
                                        <li><a href="/Admin/News">Cập Nhật&nbsp;&nbsp;Tin Tức</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a><i class="fa fa-group"></i> Khách Hàng <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="/Admin/EmailRegister">Đăng Ký Nhận Bài Viết</a></li>
                                        <li><a href="/Admin/PriceQuotation">Đăng Ký Nhận Báo Giá</a></li>
                                    </ul>
                                </li>
                                <li id="liaccount">
                                    <a><i class="fa fa-user"></i> Tài Khoản <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li><a href="/Admin/Account">Cập Nhật Tài Khoản</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- /sidebar menu -->
                    <!-- /menu footer buttons -->
                    <div class="sidebar-footer hidden-small">
                        <a data-toggle="tooltip" data-placement="top" title="Cài đặt">
                            <span class="glyphicon" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="Toàn màn hình">
                            <span class="glyphicon" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="Khoá">
                            <span class="glyphicon" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="Đăng xuất" href="/Login/Logout">
                            <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
                        </a>
                    </div>
                    <!-- /menu footer buttons -->
                </div>
            </div>
            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <nav>
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>
                        <ul class="nav navbar-nav navbar-right">
                            <li class="">
                                <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    <img id="imgUserImage1" alt=""><label id="lblFullName"></label>
                                    <span class="fa fa-angle-down"></span>
                                </a>
                                <ul class="dropdown-menu dropdown-usermenu pull-right">
                                    <li><a href="/Login/Logout"><i class="fa fa-sign-out pull-right"></i> Đăng xuất</a></li>
                                </ul>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                @RenderBody()
            </div>
            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    Hệ Thống Quản Trị Nội Dung - Công Ty TNHH MTV Tư Vấn Đầu Tư Xây Dựng Thương Mại Hà Thành
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>
    <script src="~/Layout/Admin/vendors/moment/min/moment.min.js"></script>
    <script src="~/Layout/Admin/vendors/jquery/dist/jquery.min.js"></script>
    <script src="~/Layout/Admin/vendors/nprogress/nprogress.js"></script>
    <script src="~/Layout/Admin/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/Layout/Admin/vendors/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
    <script src="~/Layout/Admin/vendors/validator/validator.js"></script>
    <script src="~/Layout/Admin/build/js/custom.min.js"></script>
    <script src="~/Layout/Admin/scripts/jquery.toast.js"></script>
    <script src="~/Layout/Admin/scripts/editor.js"></script>
    <script src="~/Scripts/functions.js"></script>
    <script>
        $(document)
        .ajaxStart(function () {
            $('#loading').fadeIn();
        })
        .ajaxStop(function () {
            $('#loading').fadeOut('slow');
        });
    </script>
    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {
            LoadUser();
        });

        function LoadUser() {
            $.getJSON("/Admin/LoadUser")
            .done(function (data) {
                $.each(data, function (key, item) {
                    $('#imgUserImage').attr('src', '../../' + item.UserImage);
                    $('#imgUserImage1').attr('src', '../../' + item.UserImage);
                    document.getElementById('hdUserName').innerHTML = item.UserName;
                    document.getElementById('lblFullName').innerHTML = item.FullName;
                    if (item.UserName == "SystemAdmin")
                    {
                        $('#liaccount').attr('style', 'visibility:visible');
                    }
                    else
                    {
                        $('#liaccount').attr('style', 'visibility:hidden');
                    }
                });
            });
        }
    </script>
</body>
</html>
