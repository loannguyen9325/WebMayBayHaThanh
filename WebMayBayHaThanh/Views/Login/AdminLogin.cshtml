@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
    <title>Đăng Nhập - Quản Trị Hệ Thống</title>
    <script src="../Layout/Login/js/modernizr.js" type="text/javascript"></script>
    <link href='../Layout/Login/css/Raleway.css' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="../Layout/Login/css/reset.min.cs">

    <link rel="stylesheet" href="../Layout/Login/css/style.css">

</head>
<body>
    <form method="post" novalidate>
        <div class="form">
            
            <div class="forceColor"></div>
            <div class="topbar">
                <div class="title">QUẢN TRỊ HỆ THỐNG</div>
                <div class="spanColor"></div>
                <input type="text" class="input" id="Username" name="Username" placeholder="Tên đăng nhập" />
                <div class="spanColor"></div>
                <input type="password" class="input" id="Password" name="Password" placeholder="Mật khẩu" />
            </div>
            <button id="btnLogin" name="btnLogin" class="submit" type="submit"><span>Đăng nhập</span></button>
        </div>
    </form>
    <script src='../Layout/Login/js/jquery.min.js'></script>
    <script src="../Layout/Login/js/index.js"></script>
</body>
</html>
